{
  "compilerOptions": {                        
    "target": "es2016",                               
    "module": "commonjs",                           
    "outDir": "./dist",                             
    "rootDir": "./src",                             
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,  
    "strictPropertyInitialization": false                   
  },
  "exclude":[
    "./node_modules"
  ]
}